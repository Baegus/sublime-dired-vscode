{
	"name": "sublime-dired-vscode",
	"displayName": "Sublime Dired for VSCode",
	"description": "A VSCode extension to edit directories as text buffers. Inspired by the dired extension for Sublime Text.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"main": "src/extension.js",
	"devDependencies": {
		"vscode": "^1.60.0"
	},
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Dired Extension Configuration",
			"properties": {
				"dired.renameMode": {
					"type": "boolean",
					"default": false,
					"description": "Enable/Disable rename mode in dired."
				}
			}
		},
		"commands": [
			{
				"command": "extension.diredBuffer",
				"title": "Open a Dired buffer"
			},
			{
				"command": "extension.toggleReadOnly",
				"title": "Toggle Read-Only Mode"
			}
		],
		"languages": [
			{
				"id": "dired",
				"aliases": [
					"Dired buffer",
					"Dired",
					"dired"
				],
				"extensions": [
					".dired"
				]
			}
		],
		"grammars": [
			{
				"language": "dired",
				"scopeName": "text.dired",
				"path": "./syntaxes/dired.tmLanguage.json"
			}
		],
		"keybindings": [
			{
				"key": "p",
				"command": "extension.diredPrev",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "n",
				"command": "extension.diredNext",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "enter",
				"command": "extension.diredSelect",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "cmd+enter",
				"command": "extension.diredSelect",
				"args": {
					"newView": true
				},
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "ctrl+enter",
				"command": "extension.diredSelect",
				"args": {
					"newView": true
				},
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "o",
				"command": "extension.diredSelect",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "c d",
				"command": "extension.diredCreateDirectory",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "c f",
				"command": "extension.diredCreateFile",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "r v",
				"command": "extension.diredRefresh",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "m",
				"command": "extension.diredToggleMark",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "shift+u",
				"command": "extension.diredUnmarkAll",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "t",
				"command": "extension.diredInvertMarks",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "u",
				"command": "extension.diredUp",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "shift+d",
				"command": "extension.diredDelete",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "shift+m",
				"command": "extension.diredMove",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "shift+8 .",
				"command": "extension.diredMarkExtension",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "shift+r",
				"command": "extension.diredRename",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "ctrl+enter",
				"command": "extension.diredRenameCommit",
				"when": "editorTextFocus && editorLangId == 'dired' && config.dired.renameMode"
			},
			{
				"key": "shift+escape",
				"command": "extension.diredRenameCancel",
				"when": "editorTextFocus && editorLangId == 'dired' && config.dired.renameMode"
			},
			{
				"key": "g",
				"command": "extension.diredGoto",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "a p",
				"command": "extension.diredAdd",
				"args": {
					"target": "project"
				},
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "r p",
				"command": "extension.diredRemoveFromProject",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "shift+b",
				"command": "extension.diredGotoAnywhere",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "a b",
				"command": "extension.diredAdd",
				"args": {
					"target": "bookmark"
				},
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "r b",
				"command": "extension.diredRemoveBookmark",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "shift+p",
				"command": "extension.diredPreview",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "j",
				"command": "extension.diredJumpToName",
				"when": "editorTextFocus && editorLangId == 'dired' && !config.dired.renameMode"
			},
			{
				"key": "tab",
				"command": "extension.diredComplete",
				"when": "editorTextFocus && editorLangId == 'dired' && config.diredComplete"
			}
		]
	}
}